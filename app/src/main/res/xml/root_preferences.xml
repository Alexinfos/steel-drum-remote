<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/bluetooth">

        <SwitchPreferenceCompat
            app:key="scan_show_all_devices"
            app:title="@string/preference_show_all_devices"
             />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about">

        <Preference
            app:key="version"
            app:icon="@drawable/round_bluetooth_audio_accent_24"
            app:title="@string/app_name"
            app:summary="@string/app_version" />

        <Preference
            app:key="github"
            app:title="@string/copyright"
            app:summary="@string/see_on_github"
            />

    </PreferenceCategory>

</PreferenceScreen>